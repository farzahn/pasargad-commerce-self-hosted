{
  "name": "ecommerce-template",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted e-commerce template - simple, customizable, 100% free",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:dev": "docker compose up -d caddy app pocketbase redis umami umami-db",
    "docker:prod": "docker compose --profile tunnel up -d",
    "docker:down": "docker compose --profile tunnel down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "backup": "bash scripts/backup.sh",
    "pb:admin": "open http://localhost:8090/_/",
    "umami:admin": "open http://localhost:3001"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "pocketbase": "^0.21.0",
    "zustand": "^5.0.0",
    "zod": "^3.23.0",
    "nodemailer": "^6.9.0",
    "jspdf": "^2.5.0",
    "jspdf-autotable": "^3.8.0",
    "@hcaptcha/react-hcaptcha": "^1.10.0",
    "ioredis": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/nodemailer": "^6.4.0",
    "typescript": "^5.7.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
