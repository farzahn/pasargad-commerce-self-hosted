# Self-Hosted E-Commerce Template - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Store Configuration
# ============================================
# Your store name (displayed in headers, emails, invoices)
STORE_NAME=My Store

# Store description (for SEO and meta tags)
STORE_DESCRIPTION=Your online store for great products

# Order number prefix (e.g., ORD, SHOP, your initials)
ORDER_PREFIX=ORD

# Currency symbol
CURRENCY_SYMBOL=$

# ============================================
# PocketBase Configuration
# ============================================
# Public URL for PocketBase API (used by frontend)
# For local development: http://localhost:8090
# For production: https://api.yourdomain.com
NEXT_PUBLIC_POCKETBASE_URL=http://localhost:8090

# ============================================
# Application Settings
# ============================================
# Public URL of the application (main site domain)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin email for frontend access control (grants admin dashboard access)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com

# Site password protection (leave empty to disable)
# When set, visitors must enter this password to access the site
SITE_PASSWORD=

# ============================================
# Shipping Configuration
# ============================================
# Flat rate shipping cost (in cents, e.g., 500 = $5.00)
SHIPPING_FLAT_RATE=500

# Free shipping threshold (in cents, e.g., 5000 = $50.00, set to 0 to disable)
FREE_SHIPPING_THRESHOLD=5000

# ============================================
# Order Status Configuration
# ============================================
# Customize the processing status name (e.g., "printing", "preparing", "manufacturing")
PROCESSING_STATUS_NAME=processing

# ============================================
# Cloudflare Tunnel (Optional - for public access)
# ============================================
# Only needed if exposing to the internet via Cloudflare Tunnel
# Get token from: cloudflared tunnel token <tunnel-name>
CLOUDFLARE_TUNNEL_TOKEN=

# ============================================
# Docker/Infrastructure Only (not used by Next.js app)
# These are used by docker-compose.yml for container configuration
# ============================================

# --- Umami Analytics (optional) ---
# PUBLIC_UMAMI_URL=https://analytics.yourdomain.com
# UMAMI_WEBSITE_ID=
# UMAMI_DB_PASSWORD=your-secure-password
# UMAMI_APP_SECRET=your-random-secret-at-least-32-chars

# --- Redis (optional - for future rate limiting) ---
# REDIS_URL=redis://redis:6379

# --- Email/SMTP (for order confirmations) ---
# Required for sending order confirmation emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=noreply@yourdomain.com

# --- hCaptcha (optional - for future bot protection) ---
# HCAPTCHA_SITE_KEY=
# HCAPTCHA_SECRET_KEY=

# --- Photon/Address Autocomplete (optional) ---
# PHOTON_URL=https://photon.komoot.io

# ============================================
# NOTE: Google OAuth Configuration
# ============================================
# Google OAuth credentials are configured in PocketBase admin panel, NOT here.
# Go to: https://your-pocketbase-url/_/ -> Settings -> Auth providers -> Google
# Get credentials from: https://console.cloud.google.com/apis/credentials
