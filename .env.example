# Self-Hosted E-Commerce Template - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Store Configuration
# ============================================
# Your store name (displayed in headers, emails, invoices)
STORE_NAME=My Store

# Order number prefix (e.g., ORD, SHOP, your initials)
ORDER_PREFIX=ORD

# Currency symbol
CURRENCY_SYMBOL=$

# ============================================
# PocketBase Configuration
# ============================================
# Public URL for PocketBase API (used by frontend)
PUBLIC_POCKETBASE_URL=https://api.localhost

# PocketBase admin credentials (set during first run)
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=

# ============================================
# Email Configuration (Nodemailer + SMTP)
# ============================================
# Gmail SMTP (recommended for free tier - 500 emails/day)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Alternative: Self-hosted Mailcow or other SMTP
# SMTP_HOST=mail.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASS=your-password

# ============================================
# Address Autocomplete (Photon/OpenStreetMap)
# ============================================
# Public Photon API (rate limited but free)
PHOTON_URL=https://photon.komoot.io

# Self-hosted Photon (if you set one up)
# PHOTON_URL=http://localhost:2322

# ============================================
# Umami Analytics (Self-Hosted)
# ============================================
PUBLIC_UMAMI_URL=https://analytics.localhost
UMAMI_WEBSITE_ID=

# Umami database password (change in production!)
UMAMI_DB_PASSWORD=your-secure-password
UMAMI_APP_SECRET=your-random-secret-at-least-32-chars

# ============================================
# hCaptcha (Bot Protection)
# ============================================
# Get keys from https://dashboard.hcaptcha.com
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# ============================================
# Redis (Rate Limiting)
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Application Settings
# ============================================
# Public URL of the application
NEXT_PUBLIC_APP_URL=https://localhost

# Admin email (for order notifications and access control)
ADMIN_EMAIL=admin@example.com

# Site password protection (leave empty to disable)
SITE_PASSWORD=

# ============================================
# Shipping Configuration
# ============================================
# Flat rate shipping cost (in cents, e.g., 500 = $5.00)
SHIPPING_FLAT_RATE=500

# Free shipping threshold (in cents, e.g., 5000 = $50.00, set to 0 to disable)
FREE_SHIPPING_THRESHOLD=5000

# Shipping region (for address validation)
SHIPPING_REGION=US

# ============================================
# Order Status Configuration
# ============================================
# Customize the processing status name (e.g., "printing", "preparing", "manufacturing")
PROCESSING_STATUS_NAME=processing

# ============================================
# Google OAuth (for PocketBase authentication)
# ============================================
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# Cloudflare Tunnel (for public access)
# ============================================
# Only needed if exposing to the internet
# Get token from: cloudflared tunnel token <tunnel-name>
CLOUDFLARE_TUNNEL_TOKEN=
